<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="magesuite" translate="label" sortOrder="300">
            <label>MageSuite</label>
        </tab>
        <section id="cache_warmer" translate="label" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Cache Warmer</label>
            <tab>magesuite</tab>
            <resource>MageSuite_PageCacheWarmer::config_cachewarmer</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" >
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <backend_model>MageSuite\PageCacheWarmer\Model\Config\Backend\EnableModule</backend_model>
                </field>
                <field id="domain" showInDefault="1" showInStore="1" sortOrder="20" showInWebsite="1" type="text" translate="label">
                    <label>Domain</label>
                    <comment>Prefix Domain for the Cache Warner Customers. Default is the Value from $_SERVER['SERVER_NAME']</comment>
                </field>
                <field id="password" showInDefault="1" showInStore="1" sortOrder="30" showInWebsite="1" type="password" translate="label">
                    <label>Customer Password</label>
                    <comment>Password for the Cache Warmer Customers. Default is "magesuite"</comment>
                </field>
                <field id="gather_tags_from_url" translate="label" type="select" sortOrder="40" showInDefault="1" >
                    <label>Enable gathering tags from url</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>This functionality will gather all cache tags associated with URLs visited by customers. Gathered URLs will be used to fill page cache warmup queue when specific tag is cleaned.</comment>
                </field>
                <field id="customer_group" translate="label" type="multiselect" sortOrder="50" showInDefault="1" >
                    <label>Customer Group</label>
                    <source_model>MageSuite\PageCacheWarmer\Model\Config\Source\CustomerGroup</source_model>
                </field>
                <field id="store_view" translate="label" type="multiselect" sortOrder="60" showInDefault="1" >
                    <label>Store View</label>
                    <source_model>MageSuite\PageCacheWarmer\Model\Config\Source\StoreView</source_model>
                </field>
            </group>
        </section>
    </system>
</config>